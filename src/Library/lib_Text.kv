<Heading>
	font_name: app.lib_text_layout["heading"]["font"]
	font_size: sp(app.lib_text_layout["heading"]["size"])
	color: app.lib_text_layout["heading"]["color"]
	text_size: self.size
	halign: 'left'
	valign: 'middle'
	markup: True


<SubHeading>
	font_name: app.lib_text_layout["sub_heading"]["font"]
	font_size: sp(app.lib_text_layout["sub_heading"]["size"])
	color: app.lib_text_layout["sub_heading"]["color"]
	text_size: self.size
	halign: 'center'
	valign: 'middle'
	markup: True


<NormalText>
	font_name: app.lib_text_layout["normal_text"]["font"]
	font_size: sp(app.lib_text_layout["normal_text"]["size"])
	color: app.lib_text_layout["normal_text"]["color"]
	text_size: self.size
	line_height: app.lib_text_layout["normal_text"]["line_spacing"]
	halign: 'center'
	valign: 'middle'
	markup: True
		
	
<MiniAppDescription>
	font_name: app.lib_text_layout["mini_app_description"]["font"]
	font_size: sp(app.lib_text_layout["mini_app_description"]["size"])
	color: app.lib_text_layout["mini_app_description"]["color"]
	text_size: self.size
	halign: 'center'
	valign: 'middle'
	markup: True


<Footer>
	font_name: app.lib_text_layout["footer"]["font"]
	font_size: sp(app.lib_text_layout["footer"]["size"])
	color: app.lib_text_layout["footer"]["color"]
	text_size: self.size
	halign: 'center'
	valign: 'middle'
	markup: True

